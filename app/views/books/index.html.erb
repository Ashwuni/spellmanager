<p id="notice"><%= flash[:notice] %></p>

<h1> All Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= form_with model: book, method: :delete, local: true do |f| %>
            <%= f.submit 'Delete' %>
            <% end %>
        </td>
        <td><%= form_with model: book, method: :add_to_book, local: true do |f| %>
            <%= f.submit 'Add To Book' %>
            <% end %>
        </td>
    <% end %>
  </tbody>
</table>

<br>

<p>
<%= link_to 'New Book', new_book_path %> |
<%= link_to 'Home', root_path %> 
</p>