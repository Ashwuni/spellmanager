<p id="notice"><%= flash[:notice] %></p>

<h1> All Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Delete', confirm_delete_book_path(book) %></td>     
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
<%= link_to 'New Book', new_book_path %> |
<%= link_to 'Home', root_path %> 
</p>